---
import AtIcon from "@components/icons/AtIcon.astro";
import CogIcon from "@components/icons/CogIcon.astro";
import LogoutIcon from "@components/icons/LogoutIcon.astro";
import { t } from "@lib/services/i18n";
import MobileMenuEntry from "./MobileMenuEntry.astro";

const { lang } = Astro.props;
---

<MobileMenuEntry href="/settings" text={t("settings", lang)}>
	<CogIcon slot="icon" />
</MobileMenuEntry>
<MobileMenuEntry href="/contact" text={t("contact_us", lang)}>
	<AtIcon slot="icon" />
</MobileMenuEntry>
<MobileMenuEntry href="/api/logout" text={t("logout", lang)}>
	<LogoutIcon slot="icon" />
</MobileMenuEntry>
