---
import ImageZoomModal from "@components/layout/ImageZoomModal.astro";
import { getDealImageUrls } from "@lib/services/imagekit";

export const partial = true;

const { dealId = "" } = Astro.params;
const imageUrls = await getDealImageUrls(dealId, 800);
const startIndex = Number(Astro.url.searchParams.get("index") || 0);
---

<ImageZoomModal {startIndex} {imageUrls} />
