---
import Layout from "@layouts/Layout.astro";
import { t } from "@lib/services/i18n";

const { code } = Astro.params;
const { language } = Astro.locals;
---

<Layout>
	<form class="flex flex-col gap-4 p-8" hx-post="/api/accounts/confirm-email-change">
		<h1 class="text-center">{t("confirm_email_change_title", language)}</h1>
		<span>{t("confirm_email_change_description", language)}</span>
		<div class="form-control">
			<label for="email">E-Mail</label>
			<input id="email" name="email" type="email" />
		</div>
		<input type="text" name="code" value={code} hidden />
		<button>{t("change", language)}</button>
	</form>
</Layout>
